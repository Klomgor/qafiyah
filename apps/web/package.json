{
  "name": "@qaf/web",
  "version": "0.0.0",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "check-types": "tsc --noEmit --pretty",
    "check": "pnpm run type-check && pnpm run lint",
    "pages:build": "pnpm next-on-pages",
    "preview": "pnpm pages:build && wrangler pages dev",
    "deploy": "pnpm pages:build && wrangler pages deploy",
    "cf-typegen": "pnpx wrangler types --env-interface CloudflareEnv env.d.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx,css}": [
      "biome check --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no -- pnpm lint-staged"
  },
  "dependencies": {
    "@qaf/zod-schemas": "workspace:*",
    "@radix-ui/react-slot": "^1.2.0",
    "@tanstack/react-query": "^5.73.3",
    "arabic-count-format": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "next": "15.4.10",
    "nuqs": "^2.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "to-arabic-digits": "^1.0.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "simple-git-hooks": "^2.12.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-debug-screens": "2",
    "typescript": "^5",
    "vercel": "^41.5.0",
    "wrangler": "^4.59.1"
  }
}
