{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "!dist/**/*.tsbuildinfo"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "*.{js,ts,json}"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["src/**/*.{ts,tsx}", "*.{ts,json}", "tsconfig.json"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{ts,tsx}", "*.{ts,json}", "vitest.config.*"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{ts,tsx}", "*.{ts,json}"],
      "outputs": ["**/*.tsbuildinfo"]
    },
    "clean": {
      "cache": false,
      "inputs": [],
      "outputs": []
    }
  },
  "globalDependencies": ["**/.env.*local", ".env", "turbo.json", "package.json"]
}
