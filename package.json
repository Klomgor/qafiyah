{
  "name": "qafiyah",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:static": "pnpm --filter @qafiyah/web build:static",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "biome check --write .",
    "format": "biome format --write . && prettier --write \"**/*.{md,mdx}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "knip": "knip",
    "madge": "madge --circular --extensions ts,tsx,js,jsx apps packages",
    "prepare": "husky",
    "ci": "pnpm run format && pnpm run lint:fix && pnpm run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.10",
    "js-yaml": "^4.1.0",
    "knip": "^5.82.1",
    "madge": "8.0.0",
    "postgres": "^3.4.5",
    "prettier": "^3.4.2",
    "turbo": "^2.5.0",
    "typescript": "5.8.2",
    "husky": "^9.1.7"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
